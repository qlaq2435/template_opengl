{
    "editor.fontLigatures": true,
    "editor.fontFamily": "'Fira Code',Consolas, 'Sarasa Mono SC' ,'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.formatOnSave": true,
    "editor.stickyScroll.enabled": true,
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.buildBeforeRun": true,
    "cmake.autoSelectActiveFolder": true,
    "cmake.allowCommentsInPresetsFile": false,
    "cmake.buildTask": false,
    "cmake.clearOutputBeforeBuild": true,
    "cmake.cmakeCommunicationMode": "fileApi",
    "cmake.cmakePath": "cmake",
    "cmake.configureOnEdit": true,
    "cmake.configureOnOpen": true,
    "cmake.ctest.parallelJobs": 0,
    "cmake.exportCompileCommandsFile": true,
    "cmake.generator": "",
    "cmake.ignoreKitEnv": false,
    "cmake.ignoreCMakeListsMissing": false,
    "cmake.launchBehavior": "reuseTerminal",
    "clangd.path": "clangd",
    "clangd.restartAfterCrash": true,
    "clangd.serverCompletionRanking": true,
    "clangd.onConfigChanged": "prompt",
    "clangd.detectExtensionConflicts": true,
    "clang-tidy.buildPath": "build",
    "clang-tidy.executable": "clang-tidy",
    "clang-format.executable": "clang-format",
    "clang-format.language.cpp.enable": true,
    "clang-format.language.cuda.enable": true,
    "clang-format.language.glsl.enable": true,
    "clang-format.fallbackStyle": "Google",
    "clang-format.language.c.enable": true,
}